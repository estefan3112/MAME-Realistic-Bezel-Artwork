<!-- dotron.lay -->

<mamelayout version="2">
	<element name="backdrop">
		<image file="dotron_backdrop.png" alphafile="dotmask.png" />
	</element>
	<element name="backdrop2">
		<image file="dotron_backdrop.png" />
	</element>
	<element name="mask">
		<image file="dotmask1.png" />
	</element>
	<element name="outer">
		<image file="dot_outer_bezel.png" />
	</element>
	<element name="inner">
		<image file="dot_inner_bezel.png" />
	</element>
	<element name="frame">
		<image file="dot_inner_frame.png" />
	</element>
	<element name="realbezel">
		<image file="dotron_realbezel.png" />
	</element>
	<element name="screen">
		<image file="dotron_screen.png" />
	</element>

	<view name="Upright_Artwork">
		<bounds x="0" y="0" width="4000" height="2950" />
		<screen index="0">
			<bounds x="890" y="591" width="2196" height="1647" />
		</screen>
		<element ref="backdrop" blend="add">
			<bounds x="513" y="97" width="2916" height="2186" />
		</element>
		<element ref="frame">
			<bounds x="828" y="479" width="2320" height="1875" />
			<color alpha="0.5" />
		</element>
		<element ref="inner">
			<bounds x="300" y="0" width="3400" height="2568" />
		</element>
		<element ref="outer">
			<bounds x="0" y="0" width="4000" height="3016" />
		</element>
	</view>

	<view name="Upright_Artwork_NoMask">
		<bounds x="0" y="0" width="4000" height="2950" />
		<screen index="0">
			<bounds x="890" y="591" width="2196" height="1647" />
		</screen>
		<element ref="backdrop2" blend="add">
			<bounds x="513" y="97" width="2916" height="2186" />
		</element>
		<element ref="frame">
			<bounds x="828" y="479" width="2320" height="1875" />
			<color alpha="0.8" />
		</element>
		<element ref="inner">
			<bounds x="300" y="0" width="3400" height="2568" />
		</element>
		<element ref="outer">
			<bounds x="0" y="0" width="4000" height="3016" />
		</element>
	</view>

	<view name="Real Cab">
		<screen index="0">
			<bounds x="380" y="55" width="1230" height="930" />
		</screen>
		<element ref="realbezel">
			<bounds x="0" y="0" width="1920" height="1080" />
		</element>
		<element ref="screen" blend="add">
			<bounds x="0" y="0" width="1920" height="1080" />
			<color red="1.0" green="1.0" blue="1.0" alpha="1.0" />
		</element>
	</view>
</mamelayout>

